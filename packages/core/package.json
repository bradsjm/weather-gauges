{
  "name": "@bradsjm/steelseries-v3-core",
  "version": "0.0.0",
  "type": "module",
  "description": "Framework-agnostic core rendering engine for SteelSeries v3 gauges",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
