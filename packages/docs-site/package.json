{
  "name": "@bradsjm/weather-gauges-docs",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Documentation and playground site for Weather Gauges",
  "author": "Jonathan Bradshaw",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bradsjm/weather-gauges.git",
    "directory": "packages/docs-site"
  },
  "homepage": "https://github.com/bradsjm/weather-gauges/tree/main/packages/docs-site",
  "bugs": {
    "url": "https://github.com/bradsjm/weather-gauges/issues"
  },
  "scripts": {
    "predev": "pnpm --filter @bradsjm/weather-gauges-core build && pnpm --filter @bradsjm/weather-gauges-elements build",
    "build": "vite build",
    "prebuild": "pnpm --filter @bradsjm/weather-gauges-core build && pnpm --filter @bradsjm/weather-gauges-elements build",
    "dev": "vite",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:visual": "vitest run --passWithNoTests",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@bradsjm/weather-gauges-elements": "workspace:*",
    "@fontsource-variable/geologica": "^5.2.7",
    "@fontsource/ibm-plex-mono": "^5.2.6"
  }
}
